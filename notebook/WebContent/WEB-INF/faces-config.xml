<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xi="http://www.w3.org/2001/XInclude"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
	
	<converter>
		<converter-id>NoteConverter</converter-id>
		<converter-class>edu.bgsu.notebook.NoteConverter</converter-class>
	</converter>
	
	<navigation-rule>
  		
  		<from-view-id>*</from-view-id>
  		
  		<navigation-case>
   			<from-outcome>note</from-outcome>
   			<to-view-id>/note.xhtml</to-view-id>
  		</navigation-case>
  
  		<navigation-case>
  			<from-outcome>noteboard</from-outcome>
  			<to-view-id>/noteboard.xhtml</to-view-id>
  		</navigation-case>
  		
  		<navigation-case>
  			<from-outcome>new_note</from-outcome>
  			<to-view-id>/new/new_note.xhtml</to-view-id>
  		</navigation-case>
  		
  		<navigation-case>
  			<from-outcome>new_category</from-outcome>
  			<to-view-id>/new/new_category.xhtml</to-view-id>
  		</navigation-case>
  
 	</navigation-rule>

</faces-config>